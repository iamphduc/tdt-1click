{
  "name": "1Click TDT",
  "description": "A simple extension that make your student life better :D",
  "version": "1.2",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage", "tabs", "activeTab", "scripting"],
  "host_permissions": ["http://*/", "https://*/"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/images/1_click_16.png",
      "32": "/images/1_click_32.png",
      "48": "/images/1_click_48.png",
      "128": "/images/1_click_128.png"
    }
  },
  "options_page": "/options_page/options.html",
  "icons": {
    "16": "/images/1_click_16.png",
		"32": "/images/1_click_32.png",
		"48": "/images/1_click_48.png",
		"128": "/images/1_click_128.png"
  }
}
